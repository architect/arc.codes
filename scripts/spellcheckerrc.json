{
  "files": ["./src/views/docs/en/**/*.md"],
  "quiet": true,
  "noSuggestions": true,
  "dictionaries": [
    "./scripts/dictionary.txt",
    "./node_modules/@architect/spellcheck-dictionary/index.js"
  ],
  "plugins": [
    "spell",
    "indefinite-article",
    "repeated-words",
    "syntax-mentions",
    "syntax-urls",
    "frontmatter"
  ],
  "frontmatterKeys": [
    "title",
    "category",
    "description",
    "sections"
  ],
  "ignore": [
    "v\\d?.\\d?",
    ".*[\\u00B9\\u00B2\\u00B3\\u2070-\\u2079]"
  ]
}
