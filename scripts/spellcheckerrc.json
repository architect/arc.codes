{
  "files": ["./src/views/docs/en/**/*.md"],
  "quiet": true,
  "noSuggestions": true,
  "dictionaries": ["./scripts/dictionary.txt"],
  "plugins": [
    "spell",
    "indefinite-article",
    "repeated-words",
    "syntax-mentions",
    "syntax-urls",
    "frontmatter"
  ],
  "frontmatterKeys": [
    "title",
    "category",
    "description",
    "sections"
  ]
}
